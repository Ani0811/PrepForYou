generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                  String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  firebaseUid         String    @unique @map("firebase_uid")
  email               String    @unique @db.Citext
  displayName         String?   @map("display_name")
  username            String?   @unique
  avatarUrl           String?   @map("avatar_url")
  avatarStoragePath   String?   @map("avatar_storage_path")
  avatarProvider      String    @default("google") @map("avatar_provider")
  emailVerified       Boolean   @default(false) @map("email_verified")
  signInCount         Int       @default(0) @map("sign_in_count")
  lastSignInAt        DateTime? @map("last_sign_in_at") @db.Timestamptz
  createdAt           DateTime  @default(now()) @map("created_at") @db.Timestamptz
  updatedAt           DateTime  @default(now()) @updatedAt @map("updated_at") @db.Timestamptz
  metadata            Json      @default("{}") @db.JsonB
  isActive            Boolean   @default(true) @map("is_active")
  role                String    @default("user") // owner, admin, user
  savedCourses        String[]  @default([]) @map("saved_courses")

  courseProgress      CourseProgress[]
  flashcardProgress    UserFlashcardProgress[]

  @@index([email])
  @@index([firebaseUid])
  @@index([lastSignInAt])
  @@index([createdAt])
  @@index([role])
  @@map("users")
}

model Course {
  id                  String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  title               String
  description         String    @db.Text
  category            String
  duration            Int       @default(120) // Duration in minutes
  imageUrl            String?   @map("image_url")
  tags                String[]  @default([])
  difficulty          String    @default("beginner") // beginner, intermediate, advanced
  enrollmentCount     Int       @default(0) @map("enrollment_count") // Cached enrollment count
  isPublished         Boolean   @default(false) @map("is_published") // Whether course is published
  createdAt           DateTime  @default(now()) @map("created_at") @db.Timestamptz
  updatedAt           DateTime  @default(now()) @updatedAt @map("updated_at") @db.Timestamptz
  isActive            Boolean   @default(true) @map("is_active")

  courseProgress      CourseProgress[]
  lessons             Lesson[]
  studyGuide          StudyGuide?

  @@index([category])
  @@index([difficulty])
  @@index([createdAt])
  @@index([isPublished])
  @@map("courses")
}

model Lesson {
  id          String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  title       String
  content     String   @db.Text
  order       Int
  duration    Int      @default(0) // Duration in minutes
  courseId    String   @map("course_id") @db.Uuid
  createdAt   DateTime @default(now()) @map("created_at") @db.Timestamptz
  updatedAt   DateTime @default(now()) @updatedAt @map("updated_at") @db.Timestamptz

  course      Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  lessonProgress LessonProgress[]

  @@index([courseId])
  @@index([order])
  @@map("lessons")
}

model CourseProgress {
  id                  String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId              String    @map("user_id") @db.Uuid
  courseId            String    @map("course_id") @db.Uuid
  progress            Int       @default(0) // Progress percentage (0-100)
  status              String    @default("not-started") // not-started, in-progress, completed
  startedAt           DateTime? @map("started_at") @db.Timestamptz
  completedAt         DateTime? @map("completed_at") @db.Timestamptz
  lastAccessedAt      DateTime  @default(now()) @map("last_accessed_at") @db.Timestamptz
  createdAt           DateTime  @default(now()) @map("created_at") @db.Timestamptz
  updatedAt           DateTime  @default(now()) @updatedAt @map("updated_at") @db.Timestamptz

  user                User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  course              Course    @relation(fields: [courseId], references: [id], onDelete: Cascade)
  lessonProgress      LessonProgress[]

  @@unique([userId, courseId])
  @@index([userId])
  @@index([courseId])
  @@index([status])
  @@map("course_progress")
}

model LessonProgress {
  id               String         @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  lessonId         String         @map("lesson_id") @db.Uuid
  courseProgressId String         @map("course_progress_id") @db.Uuid
  isCompleted      Boolean        @default(false) @map("is_completed")
  completedAt      DateTime?      @map("completed_at") @db.Timestamptz
  createdAt        DateTime       @default(now()) @map("created_at") @db.Timestamptz
  updatedAt        DateTime       @default(now()) @updatedAt @map("updated_at") @db.Timestamptz

  lesson           Lesson         @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  courseProgress   CourseProgress @relation(fields: [courseProgressId], references: [id], onDelete: Cascade)

  @@unique([courseProgressId, lessonId])
  @@index([courseProgressId])
  @@index([lessonId])
  @@map("lesson_progress")
}
model StudyGuide {
  id          String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  title       String
  courseId    String?  @unique @map("course_id") @db.Uuid
  summary     String   @db.Text
  overview    String?  @db.Text
  isPublished Boolean  @default(true) @map("is_published")
  createdAt   DateTime @default(now()) @map("created_at") @db.Timestamptz
  updatedAt   DateTime @default(now()) @updatedAt @map("updated_at") @db.Timestamptz

  course      Course?       @relation(fields: [courseId], references: [id], onDelete: SetNull)
  keyConcepts KeyConcept[]
  quickRefs   QuickReference[]
  flashcards  Flashcard[]

  @@index([courseId])
  @@map("study_guides")
}

model KeyConcept {
  id           String     @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  studyGuideId String     @map("study_guide_id") @db.Uuid
  term         String
  definition   String     @db.Text
  tags         String[]   @default([])
  order        Int        @default(0)
  createdAt    DateTime   @default(now()) @map("created_at") @db.Timestamptz
  updatedAt    DateTime   @default(now()) @updatedAt @map("updated_at") @db.Timestamptz

  studyGuide   StudyGuide @relation(fields: [studyGuideId], references: [id], onDelete: Cascade)

  @@index([studyGuideId])
  @@map("key_concepts")
}

model QuickReference {
  id           String     @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  studyGuideId String     @map("study_guide_id") @db.Uuid
  title        String
  content      String     @db.Text
  tags         String[]   @default([])
  order        Int        @default(0)
  createdAt    DateTime   @default(now()) @map("created_at") @db.Timestamptz
  updatedAt    DateTime   @default(now()) @updatedAt @map("updated_at") @db.Timestamptz

  studyGuide   StudyGuide @relation(fields: [studyGuideId], references: [id], onDelete: Cascade)

  @@index([studyGuideId])
  @@map("quick_references")
}

model Flashcard {
  id           String     @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  studyGuideId String     @map("study_guide_id") @db.Uuid
  front        String     @db.Text
  back         String     @db.Text
  difficulty   String     @default("medium") // easy, medium, hard
  tags         String[]   @default([])
  order        Int        @default(0)
  createdAt    DateTime   @default(now()) @map("created_at") @db.Timestamptz
  updatedAt    DateTime   @default(now()) @updatedAt @map("updated_at") @db.Timestamptz

  studyGuide   StudyGuide            @relation(fields: [studyGuideId], references: [id], onDelete: Cascade)
  userProgress UserFlashcardProgress[]

  @@index([studyGuideId])
  @@map("flashcards")
}

model UserFlashcardProgress {
  id           String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId       String    @map("user_id") @db.Uuid
  flashcardId  String    @map("flashcard_id") @db.Uuid
  rating       Int?      // 1=again, 2=hard, 3=good, 4=easy
  nextReviewAt DateTime  @default(now()) @map("next_review_at") @db.Timestamptz
  interval     Int       @default(1)         // days until next review
  easeFactor   Float     @default(2.5) @map("ease_factor")
  repetitions  Int       @default(0)
  createdAt    DateTime  @default(now()) @map("created_at") @db.Timestamptz
  updatedAt    DateTime  @default(now()) @updatedAt @map("updated_at") @db.Timestamptz

  user         User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  flashcard    Flashcard @relation(fields: [flashcardId], references: [id], onDelete: Cascade)

  @@unique([userId, flashcardId])
  @@index([userId])
  @@index([flashcardId])
  @@index([nextReviewAt])
  @@map("user_flashcard_progress")
}
